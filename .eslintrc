{
  "extends": ["eslint:recommended", "plugin:react/recommended", "google"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["babel", "react"],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "strict": [2, "never"],
    "require-jsdoc": 0,
    "no-invalid-this": 0,
    "max-len": [1, 140],
    "object-curly-spacing": ["error", "always"],
    "babel/new-cap": 1,
    "babel/no-await-in-loop": 1,
    "for-direction": "warn",
    "getter-return": "warn",
    "switch-colon-spacing": "warn",
    "indent": ["error", 2]
  }
}
